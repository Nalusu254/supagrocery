{
    "version": 2,
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.4.0"
        }
    },
    "routes": [
        { 
            "src": "/assets/(.*)", 
            "dest": "/assets/$1"
        },
        { 
            "src": "/(.*)\\.php$",
            "dest": "/api/index.php"
        },
        { 
            "src": "/(.*)", 
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production"
    },
    "build": {
        "env": {
            "PHP_VERSION": "7.4"
        }
    }
} 