{
    "version": 2,
    "builds": [
        { "src": "api/*.js", "use": "@vercel/node" },
        { "src": "assets/**", "use": "@vercel/static" }
    ],
    "routes": [
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.js"
        }
    ]
} 